{
  "name": "@happy-devkit/nexus-console",
  "version": "1.0.0",
  "description": "A sophisticated browser-based terminal with modular architecture and WebGL rendering",
  "publishConfig": {
    "access": "public",
    "registry": "https://registry.npmjs.org/"
  },
  "main": "dist/index.js",
  "module": "dist/index.esm.js",
  "types": "dist/index.d.ts",
  "files": [
    "dist",
    "src"
  ],
  "scripts": {
    "dev": "vite",
    "build": "vite build && tsc",
    "preview": "vite preview",
    "test": "vitest",
    "test:ui": "vitest --ui",
    "test:coverage": "vitest --coverage",
    "lint": "eslint src --ext ts,tsx,js,jsx",
    "format": "prettier --write \"src/**/*.{js,jsx,ts,tsx,json,css,md}\"",
    "typecheck": "tsc --noEmit",
    "server:dev": "cd server && uv run uvicorn main:app --reload --port 3001",
    "server:prod": "cd server && uv run uvicorn main:app --host 0.0.0.0 --port 3001",
    "server:setup": "cd server && uv sync",
    "docs": "typedoc",
    "docs:watch": "typedoc --watch",
    "docs:serve": "npx http-server docs/api -p 8080",
    "prepare": "husky install"
  },
  "keywords": [
    "terminal",
    "console",
    "xterm",
    "webgl",
    "pty",
    "websocket",
    "browser-terminal",
    "file-system"
  ],
  "author": "Happy Patterns",
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/happy-patterns-org/nexus-console.git"
  },
  "bugs": {
    "url": "https://github.com/happy-patterns-org/nexus-console/issues"
  },
  "homepage": "https://github.com/happy-patterns-org/nexus-console#readme",
  "dependencies": {
    "@business-org/shared-config-ts": "^1.0.0",
    "@xterm/addon-clipboard": "^0.1.0",
    "@xterm/addon-fit": "^0.10.0",
    "@xterm/addon-search": "^0.15.0",
    "@xterm/addon-serialize": "^0.13.0",
    "@xterm/addon-unicode11": "^0.8.0",
    "@xterm/addon-web-links": "^0.11.0",
    "@xterm/addon-webgl": "^0.18.0",
    "@xterm/xterm": "^5.5.0",
    "react": "^18.2.0",
    "react-dom": "^18.2.0",
    "tslib": "^2.8.1"
  },
  "peerDependencies": {
    "react": ">=16.8.0",
    "react-dom": ">=16.8.0"
  },
  "devDependencies": {
    "@testing-library/jest-dom": "^6.1.5",
    "@testing-library/react": "^14.1.2",
    "@types/node": "^20.10.0",
    "@types/react": "^18.2.0",
    "@types/react-dom": "^18.2.0",
    "@typescript-eslint/eslint-plugin": "^6.13.0",
    "@typescript-eslint/parser": "^6.13.0",
    "@vitest/coverage-v8": "^1.0.0",
    "@vitest/ui": "^1.0.0",
    "@xterm/headless": "^5.5.0",
    "eslint": "^8.54.0",
    "eslint-config-prettier": "^9.0.0",
    "eslint-import-resolver-typescript": "^3.6.1",
    "eslint-plugin-import": "^2.29.0",
    "husky": "^8.0.3",
    "jsdom": "^23.0.1",
    "prettier": "^3.1.0",
    "terser": "^5.43.1",
    "typedoc": "^0.25.4",
    "typescript": "^5.3.0",
    "vite": "^5.0.0",
    "vitest": "^1.0.0"
  },
  "engines": {
    "node": ">=18.0.0"
  }
}
