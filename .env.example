# Nexus Console Environment Configuration
# Copy this file to .env.local and update with your values

# Development Server Configuration
VITE_DEV_PORT=3000
VITE_CONSOLE_WS_TARGET=ws://localhost:8000
VITE_CONSOLE_API_TARGET=http://localhost:8000

# Console Service Configuration
CONSOLE_HOST=http://localhost:3000
CONSOLE_WS_HOST=ws://localhost:3000
CONSOLE_API_PATH=/api
CONSOLE_WS_PATH=/ws

# Bridge Service Configuration
BRIDGE_HOST=http://localhost:3001
BRIDGE_API_PATH=/api/bridge
# BRIDGE_API_KEY=your-api-key-here

# Terminal Server Configuration
TERMINAL_SERVER_HOST=localhost
TERMINAL_SERVER_PORT=8000
TERMINAL_BIND_ADDRESS=0.0.0.0

# Security Configuration (Required for production)
# JWT_SECRET=your-jwt-secret-here
# SESSION_SECRET=your-session-secret-here
TRUST_PROXY_HEADERS=false
CORS_ORIGINS=http://localhost:3000,http://localhost:8080

# Feature Flags
ENABLE_BRIDGE_INTEGRATION=true
ENABLE_METRICS=true
ENABLE_DISCOVERY=true
ENABLE_VIRTUAL_SCROLLING=true

# Performance Configuration
MAX_LOG_ENTRIES=10000
METRICS_INTERVAL=30000
RECONNECT_INTERVAL=3000
MAX_RECONNECT_ATTEMPTS=10
HEARTBEAT_INTERVAL=30000

# Node Environment
NODE_ENV=development